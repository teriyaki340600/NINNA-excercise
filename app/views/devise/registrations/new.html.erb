<div class="container show-container">
  <div class="form-box2">
    <div class="form-title form-title2">
      <p>CREATE NEW ACCOUNT</p>
    </div>
    <div class="mail-pass">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <p class="ninna">NINNA</p>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="mail-pass-input">
          <strong>PROFILE IMAGE</strong>
          <div class="prof-img">
            <% if @user.image_id.present? %>
              <%= image_tag @user.image_id, id: :img_prev %>
            <% else %>
              <%= image_tag "no_image.jpg", id: :img_prev %>
            <% end %>
          </div>
          <%= f.file_field :image_id, id: :user_img %>
        </div>
        <div class="mail-pass-box">
          <div class="mail-pass-input">
            <span class="fa fa-user form-control-icon" aria-hidden="true"> 名前</span>
            <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputName", placeholder:"NAME"%>
          </div>
          <div class="mail-pass-input">
            <span class="fa fa-envelope form-control-icon" aria-hidden="true"> メールアドレス</span>
            <%= f.email_field :email, class:"form-control", id:"inputEmail", placeholder:"E-MAIL"%>
          </div>
          <div class="mail-pass-input">
            <span class="fa fa-lock form-control-icon" aria-hidden="true"> パスワード</span>
            <%= f.password_field :password, autocomplete: "off", class:"form-control", id:"inputPassword", placeholder:"PASSWORD" %>
          </div>
          <div class="mail-pass-input">
            <span class="fa fa-check-square form-control-icon" aria-hidden="true"> パスワード確認用</span>
            <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", id:"inputConfirmPassword", placeholder:"PASSWORD AGAIN" %>
          </div>
          <div class="mail-pass-input">
            <span class="fa fa-mail-bulk form-control-icon" aria-hidden="true"> 郵便番号(任意)</span>
            <%= f.text_field :post_code, class:"form-control", id:"inputEmail", placeholder:"POST CODE"%>
          </div>
          <div class="mail-pass-input">
            <span class="fa fa-home form-control-icon" aria-hidden="true"> 住所(任意)</span>
            <%= f.text_field :address, class:"form-control", id:"inputEmail", placeholder:"ADDRESS"%>
          </div>
          <div class="mail-pass-input">
            <span class="fa fa-phone form-control-icon" aria-hidden="true"> 電話番号(任意)</span>
            <%= f.text_field :phone_number, class:"form-control", id:"inputEmail", placeholder:"PHONE NUMBER"%>
          </div>
        </div>
        <div class="mail-pass-input">
          <%= f.submit "　Sign up　", class:"btn btn-lg btn-primary badge-pill" %>
          <%= link_to 'Do you have an account?', user_session_path %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<script type="text/javascript">
  $(function() {
    function readURL(input) {
        if (input.files && input.files[0]) {
        var reader = new FileReader();
        reader.onload = function (e) {
    $('#img_prev').attr('src', e.target.result);
        }
        reader.readAsDataURL(input.files[0]);
        }
    }
    $("#user_img").change(function(){
        readURL(this);
    });
  });
</script>