<header>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand ninna" href="#">NINNA</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <%= link_to 'HOME', root_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to 'PHOTOS', photos_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to 'UPLOAD', new_photo_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to 'RENTALS', root_path, class: "nav-link" %>
        </li>
      </ul>
      <form class="form-inline my-2 my-lg-0">
        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
      </form>
      <div class="header-right">
        <ul class="navbar-nav mr-auto">
          <% if user_signed_in? %>
            <li class="nav-item active">
              <%= link_to 'Logout', destroy_user_session_path, class: "nav-link", method: :delete %>
            </li>
            <li class="nav-item active">
              <%= link_to user_path(current_user.id), class: "nav-link" do %>
                Hi, <%= current_user.name %>
              <% end %>
            </li>
          <% else %>
            <li class="nav-item active">
              <%= link_to 'Login', user_session_path, class: "nav-link" %>
            </li>
            <li class="nav-item active">
              <%= link_to 'Sign up', new_user_registration_path, class: "nav-link" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>